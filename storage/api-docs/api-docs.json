        "/v1/contracts": {
            "get": {
                "tags": [
                    "Contracts"
                ],
                "summary": "Получить список договоров",
                "description": "Возвращает список всех договоров с пагинацией",
                "operationId": "bdbac4711f02b5891f30b4e4b428b701",
                "parameters": [
                    {
